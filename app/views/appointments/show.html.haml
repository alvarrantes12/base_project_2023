%p#notice= notice

%p
  %b= t('activerecord.attributes.appointment.date')+":"
  = @appointment.date

%p
%b= t('activerecord.attributes.appointment.name_doctor')+":"
= @appointment.doctor.first_name

%p
%b= t('activerecord.attributes.appointment.name_patient')+":"
= @appointment.patient.first_name

.row.mt-4
.offset-3.col-3 
  = link_to t('application.back'), appointments_path, class: "btn btn-secondary btn-block"

.col-3 
  = button_to t('application.delete')+" "+t('activerecord.modules.content.one'),@content, method: :delete, class: "btn btn-danger"
  
%p
= link_to t('application.edit'), edit_appointment_path(@appointment)
\|
= link_to t('application.back'), appointments_path


