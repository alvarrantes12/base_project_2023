=form_for @appointment, validate: true do |f|
  -if @appointment.errors.any?
    .card.mx-4 
      .card.body 
        %div{style: 'color: red'}
          %h2 
            = t('application.can_not_be_saved')
          %ul
            -  @appointment.errors.each do |error|
              %li error.full_message

  .form-group.mx-4 
    = f.label :date, class: "form-label required"
    .div.w-25
      = f.datetime_field :date, autofocus: true, class: "form-control"

  .form-group.mx-4 
    = f.label :doctor, class: "form-label required"
    .div.w-25
      = f.select(:doctor_id, options_for_select(@doctors, @appointment.doctor), {prompt: "Seleccione"}, class: "form-control")

  .form-group.mx-4 
    = f.label :patient, class: "form-label required"
    .div.w-25
      = f.select(:patient_id, options_for_select(@patients, @appointment.patient), {prompt: "Seleccione"}, class: "form-control")

  .row.mt-4.my-4
    .offset.col-3.mx-4
      = link_to t('application.back'), appointments_path, class: "btn btn-secondary btn-block"
      = link_to t('application.show'), @appointment, class: "btn btn-info"
      = button_tag t('application.save'), class: "btn btn-outline-success btn-block"
   
      
  
      
      


