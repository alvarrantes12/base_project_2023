%p{:style => "color: green"}= notice
.div.m-4
  .page.header
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.content.other'))
    .float-end.pb-4
      = link_to t('application.create'), new_content_path, class: "btn btn-primary"

  %table.table.table-striped
    %thread
      %tr
        %th= t('activerecord.attributes.content.title')
        %th= t('activerecord.attributes.content.description')
        %th= t('activerecord.attributes.content.start_date')
        %th= t('activerecord.attributes.content.end_date')
        %th 
        %th
        %th
    %tbody
      -@contents.each do |content|
        %tr
          %td= content.title
          %td= content.description
          %td= content.start_date.strftime("%d/%m/%Y %I:%M %P")
          %td= content.end_date.strftime("%d/%m/%Y %I:%M %P")
          %td= link_to t('application.show'), content, class: "btn btn-info"
          %th= link_to t('application.edit'), edit_content_path(content), class: "btn btn-success"
          %th= button_to t('application.delete'), content, method: :delete, class: "btn btn-danger"