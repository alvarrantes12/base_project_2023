= form_with(model: content) do |form|
  - if content.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(content.errors.count, "error")
        prohibited this content from being saved:
      %ul
        - content.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :title, style: "display: block"
    = form.text_field :title
  %div
    = form.label :description, style: "display: block"
    = form.text_area :description
  %div
    = form.label :start_date, style: "display: block"
    = form.datetime_field :start_date
  %div
    = form.label :end_date, style: "display: block"
    = form.datetime_field :end_date
  %div
    = form.submit
