= form_for @doctor, validate: true do |f|
  -if @doctor.errors.any?
    .card.mx-4
      .card-body
        %div{style: 'color: red'}
          %h2
            = t('application.can_not_be_saved')
          %ul
            -  @doctor.errors.each do |error|
              %li= error.full_message

  .form-group.mx-4
    = f.label :first_name, class: "form-label required"
    .div.w-25
      = f.text_field :first_name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :last_name, class: "form-label required"
    .div.w-25
      = f.text_field :last_name, autofocus: true, class: "form-control"

  .form-group.mx-4
    = f.label :code, class: "form-label required"
    .div.w-25
      = f.text_field :code, autofocus: true, class: "form-control"

  .row.mt-4
    .offset-3.col-3
      = link_to t('application.back'), doctors_path, class: "btn btn-secondary btn-block"
    .col-3
      = button_tag t('application.save'), class: "btn btn-outline-success btn-block"