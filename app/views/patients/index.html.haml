%p{:style => "color: green"}= notice
.div.m-4
  .page.header 
    %h1.mb-4
      = t('application.list_of', model: t('activerecord.modules.patient.other'))
    .float-end.pb-4
      = link_to t('application.create'), new_patient_path, class: "btn btn-primary"

%table.table.table-striped
  %thread
    %tr
      %th= t('activerecord.attributes.content.first_name')
      %th= t('activerecord.attributes.content.last_name')

  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.first_name
        %td= patient.last_name
        %td= link_to t('application.show'), patient, class: "btn btn-info"
        %th= link_to t('application.edit'), edit_content_path(patient), class: "btn btn-success"
        %th= link_to t('application.delete'), patient, class: "btn btn-danger"

%br
